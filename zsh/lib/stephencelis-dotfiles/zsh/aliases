alias ez="mvim -f ~/.zshrc +1 \"+set syntax=sh\" \"+Sex ~/.zsh\" && echo Sourcing... && source ~/.zshrc"

alias -g "?"="| grep --color --extended-regexp"

for domain (com net org edu) alias -s $domain="open"
alias -s log="tail -200f"

alias ls="ls -FG"
alias which="builtin which -a"

alias gvim="mvim"

# Ruby
alias "gem update"="gem update && gem cleanup && gem rdoc --all"
alias "gem?"="gem query -r ?"
alias ri="ri -Tf ansi"

# Rails
alias "reload!"="echo Reloading... && touch tmp/restart.txt"
alias sc="script/console"
alias sg="script/generate"
alias ss="script/server"
alias rvim="mvim . +Rproject"

# Java
alias yuicompressor="java -jar /usr/local/lib/java/yuicompressor-2.4.1.jar"
